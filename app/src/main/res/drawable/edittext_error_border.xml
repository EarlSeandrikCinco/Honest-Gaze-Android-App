<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background (lightly tinted for error state) -->
    <solid android:color="#1AFF0000" /> <!-- Transparent light red -->

    <!-- Red border -->
    <stroke
        android:width="2dp"
        android:color="#FF3B30" />

    <!-- Slight rounding for modern design -->
    <corners android:radius="8dp" />

    <!-- Padding inside the field -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>