<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".CreateQuiz">

    <!-- Header Icon -->

    <!-- Title -->


    <!-- Back Button -->

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/hello_name"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Create a Quiz"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_arrow_back"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>


    <!-- Quiz Name -->
    <EditText
        android:id="@+id/inputField"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Quiz Name"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Quiz Options Label -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Options"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/inputField"
        app:layout_constraintStart_toStartOf="@id/inputField"
        android:layout_marginTop="24dp"/>

    <!-- Option 1 -->
    <EditText
        android:id="@+id/inputField2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Grace Period"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMore2"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnMore2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_more_vert_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/inputField2"
        app:layout_constraintBottom_toBottomOf="@id/inputField2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Option 2 -->
    <EditText
        android:id="@+id/inputField3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Warning cooldown"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/inputField2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMore3"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnMore3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_more_vert_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/inputField3"
        app:layout_constraintBottom_toBottomOf="@id/inputField3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Option 3 -->
    <EditText
        android:id="@+id/inputField4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Number of warnings"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/inputField3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMore4"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnMore4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_more_vert_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/inputField4"
        app:layout_constraintBottom_toBottomOf="@id/inputField4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Option 4 (no more button) -->
    <EditText
        android:id="@+id/inputField5"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Copy this!"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/inputField4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Copy Text Button -->
    <Button
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Copy Text"
        android:textSize="10sp"
        android:background="@drawable/rounded_button_gray"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/inputField5"
        app:layout_constraintEnd_toEndOf="@id/inputField5"
        android:layout_marginTop="16dp"/>

    <!-- Create Quiz Button -->
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/create_quiz"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button_primary"
        app:layout_constraintTop_toBottomOf="@id/btnCopy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
