<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".CreateQuiz">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_arrow_back"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create a Quiz"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>

    <!-- Quiz Name -->
    <EditText
        android:id="@+id/inputField"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Quiz Name"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Quiz Options Label -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Options"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/inputField"
        app:layout_constraintStart_toStartOf="@id/inputField"
        android:layout_marginTop="24dp"/>

    <!-- Grace Period -->
    <EditText
        android:id="@+id/inputField2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Grace Period"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMore2"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnMore2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_more_vert_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/inputField2"
        app:layout_constraintBottom_toBottomOf="@id/inputField2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Warning Cooldown -->
    <EditText
        android:id="@+id/inputField3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Warning Cooldown"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/inputField2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMore3"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnMore3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_more_vert_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/inputField3"
        app:layout_constraintBottom_toBottomOf="@id/inputField3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Number of Warnings -->
    <EditText
        android:id="@+id/inputField4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Number of Warnings"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/inputField3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMore4"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnMore4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_more_vert_24"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/inputField4"
        app:layout_constraintBottom_toBottomOf="@id/inputField4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Create Quiz Button -->
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Create Quiz"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button_primary"
        app:layout_constraintTop_toBottomOf="@id/inputField4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
