<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:padding="20dp">

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="24dp"
        android:elevation="4dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz History"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a quiz to view your results and replay."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <!-- Quiz 1 Button -->
        <Button
            android:id="@+id/btnQuiz1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Quiz 1"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- Quiz 2 Button -->
        <Button
            android:id="@+id/btnQuiz2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Quiz 2"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- Quiz 3 Button -->
        <Button
            android:id="@+id/btnQuiz3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Quiz 3"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- Quiz 4 Button -->
        <Button
            android:id="@+id/btnQuiz4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Quiz 4"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- Quiz 5 Button -->
        <Button
            android:id="@+id/btnQuiz5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Quiz 5"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- Quiz 6 Button -->
        <Button
            android:id="@+id/btnQuiz6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Quiz 6"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- Quiz 7 Button -->
        <Button
            android:id="@+id/btnQuiz7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Quiz 7"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>