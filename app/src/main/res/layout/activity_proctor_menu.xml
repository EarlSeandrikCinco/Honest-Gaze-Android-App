<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Top Bar / Tab -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Honest Gaze"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Hello Proctor Title -->
    <TextView
        android:id="@+id/tvProctorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,\nProctor!"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:lineSpacingMultiplier="0.85"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:contentDescription="Profile Options" />

    <!-- Card-style Button 1: Manage / Create Quiz -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardButton1"
        android:layout_width="260dp"
        android:layout_height="180dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_below="@id/tvProctorTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:clickable="false"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <!-- Card-style Button 2: Summary Screen -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardButton2"
        android:layout_width="260dp"
        android:layout_height="180dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_below="@id/cardButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:clickable="false"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proctor Panel"
        android:textSize="14sp"
        android:textColor="#777777"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

</RelativeLayout>
