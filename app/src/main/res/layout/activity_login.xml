<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_bg"
    android:padding="@dimen/spacing_xl">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_hero_title"
        android:text="Log In"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/text_header" />

    <!-- Login Form Card -->
    <LinearLayout
        android:id="@+id/layoutLoginForm"
        android:layout_width="@dimen/fixed_card_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="@dimen/spacing_4xl"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:background="@color/slate_card"
        android:elevation="6dp">

        <!-- Username Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_body"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:hint="Enter username"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:background="@drawable/rounded_edittext"
            android:paddingStart="@dimen/card_padding"
            android:paddingEnd="@dimen/card_padding"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <!-- Password Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_body"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:hint="Enter password"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:background="@drawable/rounded_edittext"
            android:paddingStart="@dimen/card_padding"
            android:paddingEnd="@dimen/card_padding"
            android:inputType="textPassword"
            android:singleLine="true" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_2xl"
            android:text="Log In"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/royal_blue"
            android:textAllCaps="false"
            android:elevation="2dp" />

    </LinearLayout>

</RelativeLayout>