<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/slate_card"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/card_elevation_sm"
    app:cardCornerRadius="@dimen/card_corner_radius_md"
    android:layout_marginBottom="@dimen/spacing_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/list_item_padding"
        android:gravity="center_vertical">

        <!-- Student Avatar Circle -->
        <androidx.cardview.widget.CardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardCornerRadius="26dp"
            app:cardBackgroundColor="#1F2937"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/studentInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="S"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- Student Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_lg">

            <TextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_xs">

                <TextView
                    android:id="@+id/studentWarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warnings: 0"
                    android:textSize="15sp"
                    android:textColor="#D1D5DB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textSize="15sp"
                    android:textColor="#D1D5DB"/>

                <TextView
                    android:id="@+id/studentEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events: 0"
                    android:textSize="15sp"
                    android:textColor="#D1D5DB"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Status Indicator -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statusIndicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#4CAF50"
            app:cardElevation="0dp"
            android:layout_marginStart="@dimen/spacing_md"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
