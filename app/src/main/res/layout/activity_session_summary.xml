<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SessionSummaryActivity">

    <!-- Student Table placeholder -->
    <TextView
        android:id="@+id/tvStudentTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Students Table"
        android:textSize="16sp"
        android:padding="16dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnExportCsv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Export CSV Button -->
    <Button
        android:id="@+id/btnExportCsv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Export as CSV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStudentTable"/>

</androidx.constraintlayout.widget.ConstraintLayout>
