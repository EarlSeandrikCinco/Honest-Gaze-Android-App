<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_bg"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xl">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_hero_title"
            android:text="Sign Up"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/text_header" />

        <!-- Registration Form Card -->
        <LinearLayout
            android:id="@+id/layoutRegisterForm"
            android:layout_width="@dimen/fixed_card_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="@dimen/spacing_4xl"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xl"
            android:background="@color/slate_card"
            android:elevation="6dp">

            <!-- Role Selection -->
            <TextView
                android:id="@+id/txtRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register as:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_header"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_body"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="Enter your name"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="@dimen/card_padding"
                android:paddingEnd="@dimen/card_padding"
                android:inputType="textPersonName"
                android:singleLine="true" />

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_body"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="Enter your email"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="@dimen/card_padding"
                android:paddingEnd="@dimen/card_padding"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_body"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="Enter password"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="@dimen/card_padding"
                android:paddingEnd="@dimen/card_padding"
                android:inputType="textPassword"
                android:singleLine="true" />

            <!-- Confirm Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_body"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="Confirm password"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="@dimen/card_padding"
                android:paddingEnd="@dimen/card_padding"
                android:inputType="textPassword"
                android:singleLine="true" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/spacing_2xl"
                android:text="Register"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/royal_blue"
                android:textAllCaps="false"
                android:elevation="2dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>