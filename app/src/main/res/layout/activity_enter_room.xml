<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/enterRoomLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_bg"
    android:padding="@dimen/spacing_xl">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_hero_title"
        android:text="Enter Exam\nRoom"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/text_header"
        android:lineSpacingMultiplier="0.85"
        android:gravity="center" />

    <!-- Enter Room Form Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="@dimen/fixed_card_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleText"
        android:layout_marginTop="@dimen/spacing_4xl"
        app:cardBackgroundColor="@color/slate_card"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius_lg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xl">

            <!-- Room ID Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room ID"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_body"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/roomInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="Enter room ID"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/rounded_edittext"/>

            <!-- Your Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_body"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="@drawable/rounded_edittext"/>

            <!-- Join Room Button -->
            <Button
                android:id="@+id/btnJoin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Join Room"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/royal_blue"
                android:textAllCaps="false"
                android:elevation="2dp"
                android:layout_marginTop="@dimen/spacing_2xl"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>