<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Quiz Title -->
        <TextView
            android:id="@+id/tvQuizTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 1 Results"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />

        <!-- Details Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="20dp">

            <!-- Score -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 85/100"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="12dp" />

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Passed"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <!-- Duration -->
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 45 minutes"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Warnings -->
            <TextView
                android:id="@+id/tvWarnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warnings: 2"
                android:textSize="16sp"
                android:textColor="#FF9800"
                android:layout_marginBottom="8dp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed: Dec 8, 2025 at 3:45 PM"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Warning Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warning Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Looked away at 12:34"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Multiple faces detected at 23:15"
                android:textSize="15sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- View Replay Button -->
        <Button
            android:id="@+id/btnViewReplay"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="View Replay"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <!-- Back to History Button -->
        <Button
            android:id="@+id/btnBackToHistory"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Back to History"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_gray"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>