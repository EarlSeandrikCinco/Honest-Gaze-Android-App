<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_bg"
    android:padding="@dimen/screen_padding">

    <ScrollView
        android:id="@+id/scrollDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvQuizTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz 1 Results"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_header"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginBottom="@dimen/spacing_2xl" />

            <!-- Summary Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_2xl"
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardBackgroundColor="@color/slate_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:columnOrderPreserved="false"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_body" />

                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score: 85/100"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_header" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_body" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Passed"
                            android:textSize="16sp"
                            android:textColor="@color/text_header" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_body" />

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration: 45 minutes"
                            android:textSize="16sp"
                            android:textColor="@color/text_header" />
                    </GridLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_body"
                        android:alpha="0.3"
                        android:layout_marginTop="@dimen/spacing_2xl"
                        android:layout_marginBottom="@dimen/spacing_2xl" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:columnOrderPreserved="false"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warnings"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_body" />

                        <TextView
                            android:id="@+id/tvWarnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warnings: 2"
                            android:textSize="16sp"
                            android:textColor="@color/text_header" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_body" />

                        <TextView
                            android:id="@+id/tvTimestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed: Dec 8, 2025 at 3:45 PM"
                            android:textSize="14sp"
                            android:textColor="@color/text_body" />
                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Warning Details Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_header"
                android:layout_marginBottom="@dimen/spacing_md" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardWarnings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_3xl"
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius_md"
                app:cardBackgroundColor="@color/slate_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/list_item_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Looked away at 12:34"
                        android:textSize="15sp"
                        android:textColor="@color/text_body"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Multiple faces detected at 23:15"
                        android:textSize="15sp"
                        android:textColor="@color/text_body" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Actions -->
            <Button
                android:id="@+id/btnViewReplay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="View Replay"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/royal_blue"
                android:textAllCaps="false"
                android:elevation="2dp"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <Button
                android:id="@+id/btnBackToHistory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Back to History"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/royal_blue"
                android:textAllCaps="false"
                android:elevation="2dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>