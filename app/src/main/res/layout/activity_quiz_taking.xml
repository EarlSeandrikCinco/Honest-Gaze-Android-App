<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Face Detection Indicator (Top Center) -->
    <RelativeLayout
        android:id="@+id/faceDetectionContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/face_detection_background">

        <!-- Camera Preview (Small) -->
        <androidx.camera.view.PreviewView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Face Detection Icon Overlay -->
        <TextView
            android:id="@+id/tvFaceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ðŸ˜Š"
            android:textSize="48sp"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Quiz Content Area (WebView for questions) -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/faceDetectionContainer"
        android:layout_above="@id/bottomBar"
        android:layout_marginTop="20dp" />

    <!-- Bottom Bar with Timer and Submit -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:elevation="8dp">

        <!-- Timer and Warning Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60:00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvWarningCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warnings: 0"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:background="@drawable/warning_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Submit Quiz"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Warning Overlay (appears when warning is triggered) -->
    <View
        android:id="@+id/warningOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40FF0000"
        android:visibility="gone" />

    <!-- Warning Text (center of screen) -->
    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="âš ï¸ Warning"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#D32F2F"
        android:padding="16dp"
        android:elevation="8dp"
        android:visibility="gone" />

</RelativeLayout>