<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_bg"
    android:padding="@dimen/spacing_xl">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_hero_title"
        android:text="Are you a?"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/text_header" />

    <!-- Role Selection Card -->
    <LinearLayout
        android:id="@+id/layoutRoleSelection"
        android:layout_width="@dimen/fixed_card_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="@dimen/spacing_4xl"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:background="@color/slate_card"
        android:elevation="6dp">

        <!-- Student Button -->
        <Button
            android:id="@+id/btnStudent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Student"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/royal_blue"
            android:textAllCaps="false"
            android:elevation="2dp" />

        <!-- Proctor Button -->
        <Button
            android:id="@+id/btnProctor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="Proctor"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/royal_blue"
            android:textAllCaps="false"
            android:elevation="2dp" />

    </LinearLayout>

</RelativeLayout>