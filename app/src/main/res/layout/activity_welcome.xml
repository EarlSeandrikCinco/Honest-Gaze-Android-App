<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_bg"
    android:padding="@dimen/spacing_xl">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/honestgazelogo"
        android:contentDescription="Honest Gaze Logo" />

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_2xl"
        android:text="Welcome to\nHonest Gaze"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/text_header"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_md"
        android:text="Secure exam proctoring made simple"
        android:textSize="16sp"
        android:textColor="@color/text_body"
        android:gravity="center" />

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="@dimen/fixed_card_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_4xl"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:background="@color/slate_card"
        android:elevation="6dp">

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Sign Up"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/royal_blue"
            android:textAllCaps="false"
            android:elevation="2dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="Log In"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/royal_blue"
            android:textAllCaps="false"
            android:elevation="2dp" />

    </LinearLayout>

</RelativeLayout>